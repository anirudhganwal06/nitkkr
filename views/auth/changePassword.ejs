<%- include('../includes/start.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/login-form.css">    

<%- include('../includes/headBody.ejs') %>
    <%- include('../includes/header.ejs') %>
    <%- include('../includes/navigation.ejs') %>

    <div class="login-form">
        <form action="/change-password" method="POST">
            <select name="usertype">
                    <option value="student">Student</option>
                    <option value="teacher">Teacher</option>
                    <option value="parent">Parent</option>
                </select>
            <br><br>
            <input type="text" name="userid" placeholder="User Id" required>
            <br><br>
            <input type="text" name="oldPassword" placeholder="Old Password" required>
            <br><br>
            <input type="password" id="newPassword" name="newPassword" placeholder="New Password" onkeyup="comparePasswords();"" userid="newPassword">
            <br><br>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" placeholder="Confirm Password" onkeyup="comparePasswords();" userid="confirmNewPassword">
            <br><br>
            <button type="submit" id="submit-btn" disabled>Change Password</button>
        </form>
    </div>
    <script>
        let comparePasswords = () => {
            console.log("keyup");
            if (document.getElementById('newPassword').value == document.getElementById('confirmNewPassword').value) {
                document.getElementById('submit-btn').disabled = false;
            } else {
                document.getElementById('submit-btn').disabled = true;
            }
        };
    </script>
<%- include('../includes/end.ejs') %>
